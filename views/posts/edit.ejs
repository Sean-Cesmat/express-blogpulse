<h1>Edit Post</h1>

<form action="/posts/<%= post.id %>" data-postId="<%= post.id %>" method="POST" id="edit-post">
  <div class="form-group">
    <label for="title">Title</label>
    <input type="text" class="form-control" id="title" name="title" value="<%= post.title %>" required>
  </div>

  <div class="form-group">
    <label for="author">Author</label>
    <select name="authorId" id="author" class="form-control">
        <option value="<%= post.author.name %>" selected><%= post.author.getFullName() %></option>
    </select>
    <p>If your name doesn't show up, please <a href="/authors/new">sign up to be an author.</a></p>
  </div>

  <div class="form-group">
    <label for="content">Content</label>
    <textarea type="text" class="form-control" id="content" name="content" required><%= post.content %></textarea>
  </div>

  <input type="submit" class="btn btn-primary">
</form>
